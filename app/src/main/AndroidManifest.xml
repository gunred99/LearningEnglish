<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.englishlearnapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EnglishLearnApp">
        <activity android:name=".ui.init.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LaunchActivity"
            android:label="Launch" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.signin.SignInActivity" />
        <activity android:name=".ui.main.dictionary.DictionaryActivity" />
        <activity android:name=".ui.main.MainActivity" android:theme="@style/Theme.EnglishLearnApp.NoActionBar"/>
        <activity android:name=".ui.main.profile.ProfileActivity" />
        <activity android:name=".ui.main.learn.LearnActivity" />
        <activity android:name=".ui.main.practice.PracticeActivity" />
        <activity android:name=".ui.main.practices.activity.PracticesActivity"/>
        <activity android:name=".ui.main.botchat.ui.BotChatActivity" />
        <activity android:name=".ui.main.learn.LearnByTopics.LearnByTopicsActivity"/>

        <activity android:name=".ui.main.message.MessageActivity"/>
        <activity android:name=".ui.main.settings.SettingsActivity"/>
        <activity android:name=".ui.main.send.SendActivity"/>
        <activity android:name=".ui.main.share.ShareActivity"/>
        <activity android:name=".ui.main.developer.DeveloperActivity"/>

        <activity android:name=".ui.main.practice.Category.CategoryActivity"/>
        <activity android:name=".ui.main.practice.Category.Questions.QuestionsActivity"/>
    </application>

</manifest>